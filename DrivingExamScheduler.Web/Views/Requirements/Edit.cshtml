@model DrivingExamScheduler.Domain.Models.Domain.Requirement

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Requirement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="ViewBag.RequirementTypes">
                    <option value="">Select requirement type...</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredAge" class="control-label"></label>
                <input asp-for="RequiredAge" class="form-control" />
                <span asp-validation-for="RequiredAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredCategoryId" class="control-label"></label>
                <select asp-for="RequiredCategoryId" class="form-control" asp-items="ViewBag.RequiredCategoryId">
                    <option value="">Select category...</option>
                </select>
                <span asp-validation-for="RequiredCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocumentTypeId" class="control-label"></label>
                <select asp-for="DocumentTypeId" class="form-control" asp-items="ViewBag.DocumentTypeId">
                    <option value="">Select document type...</option>
                </select>
                <span asp-validation-for="DocumentTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearsFromLastPass" class="control-label"></label>
                <input asp-for="YearsFromLastPass" class="form-control" />
                <span asp-validation-for="YearsFromLastPass" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
